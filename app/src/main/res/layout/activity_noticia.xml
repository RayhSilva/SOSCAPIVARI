<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Noticia">

    <View
        android:id="@+id/containerComponentes2"
        style="@style/ContainerComponents"
        android:layout_width="352dp"
        android:layout_height="627dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <ImageView
        android:id="@+id/noticia2"
        android:layout_width="125dp"
        android:layout_height="110dp"
        android:layout_marginTop="4dp"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintTop_toTopOf="@+id/containerComponentes2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/noticia" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="Notícias"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/noticia2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
         />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:srcCompat="@drawable/enchente" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="296dp"
        android:layout_height="111dp"
        android:layout_marginTop="23dp"
        android:text="No ano de 2023, Capivari registrou a maior enchente da história, deixando 19 famílias desabrigadas."
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        />


    <TextView
        android:id="@+id/textView19"
        android:layout_width="153dp"
        android:layout_height="34dp"
        android:layout_marginTop="32dp"
        android:text="Saiba mais"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />



</androidx.constraintlayout.widget.ConstraintLayout>